{
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "printWidth": 250,
  "tabWidth": 4,
  "trailingComma": "none",
  "semi": true,
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": ["*.json", "*.jsonc", "*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.config.js"],
      "options": {
        "printWidth": 150
      }
    }
  ]
}
